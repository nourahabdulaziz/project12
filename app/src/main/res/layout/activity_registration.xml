<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.nourah.myapplication.registration">

    <EditText
        android:id="@+id/edfname"
        android:layout_width="222dp"
        android:layout_height="43dp"
        android:ems="10"
        android:textColor="#8e8b8b"
        android:hint="First Name*"
        android:inputType="textPersonName"
        android:backgroundTint="@color/background"
        android:textCursorDrawable="@color/background"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="38dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edlname"
        android:layout_width="227dp"
        android:layout_height="44dp"
        android:ems="10"
        android:textColor="#8e8b8b"
        android:hint="Last Name"
        android:inputType="textPersonName"
        android:backgroundTint="@color/background"
        android:textCursorDrawable="@color/background"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/edfname"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toBottomOf="@+id/edfname"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/edfname"
        app:layout_constraintHorizontal_bias="0.0" />


    <EditText
        android:id="@+id/confirmpass"
        android:layout_width="234dp"
        android:layout_height="44dp"
        android:ems="10"
        android:textColor="#8e8b8b"
        android:hint="Confirm Password"
        android:inputType="textPassword"
        android:backgroundTint="@color/background"
        android:textCursorDrawable="@color/background"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/edemail"
        android:layout_marginTop="78dp"
        app:layout_constraintTop_toBottomOf="@+id/edemail"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/edemail"
        app:layout_constraintHorizontal_bias="0.0" />

    <EditText
        android:id="@+id/pass"
        android:layout_width="0dp"
        android:layout_height="42dp"
        android:layout_marginTop="18dp"
        android:ems="10"
        android:textColor="#8e8b8b"
        android:hint="Password*"
        android:inputType="textPassword"
        android:backgroundTint="@color/background"
        android:textCursorDrawable="@color/background"
        app:layout_constraintLeft_toLeftOf="@+id/edemail"
        app:layout_constraintRight_toRightOf="@+id/edemail"
        app:layout_constraintTop_toBottomOf="@+id/edemail"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintHorizontal_bias="0.0" />
    <ImageView
        android:padding="3dp"
        android:id="@+id/pass_icon"
        android:src="@drawable/pass_icon"
        android:layout_width="42dp"
        android:layout_height="41dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/confirmpass"
        android:layout_marginTop="124dp"
        app:layout_constraintTop_toBottomOf="@+id/user_icon" />

    <ImageView
        android:padding="3dp"
        android:id="@+id/user_icon"
        android:src="@drawable/user"
        android:layout_width="0dp"
        android:layout_height="0dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:backgroundTint="@color/background"
        android:textCursorDrawable="@color/background"
        app:layout_constraintBottom_toTopOf="@+id/edlname"
        app:layout_constraintRight_toRightOf="@+id/pass_icon"
        android:layout_marginTop="28dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="9dp"
        app:layout_constraintLeft_toLeftOf="@+id/pass_icon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintVertical_bias="0.705" />
    <EditText
        android:id="@+id/edemail"
        android:layout_width="230dp"
        android:layout_height="40dp"
        android:ems="10"
        android:textColor="#8e8b8b"
        android:hint="Email*"
        android:inputType="textEmailAddress"
        android:backgroundTint="@color/background"
        android:textCursorDrawable="@color/background"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/edlname"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/edlname"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/edlname"
        app:layout_constraintHorizontal_bias="1.0" />

    <ImageView
        android:padding="3dp"
        android:id="@+id/email_icon"
        android:src="@drawable/email_icon"
        android:layout_width="44dp"
        android:layout_height="33dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/pass_icon"
        app:layout_constraintRight_toRightOf="@+id/edlname"
        android:layout_marginTop="72dp"
        app:layout_constraintTop_toBottomOf="@+id/edfname"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="69dp"
        app:layout_constraintLeft_toLeftOf="@+id/pass_icon"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintVertical_bias="0.545" />
    <Button
        android:id="@+id/btnreg"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:text="SIGN UP"
        android:textColor="#604f73"
        android:background="@drawable/resbutton"
        android:onClick="toregister"
        android:layout_marginStart="64dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/loginpage"
        android:layout_marginEnd="64dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="32dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tpass" />

    <TextView
    android:id="@+id/textlogin"
    android:layout_width="163dp"
    android:layout_height="26dp"
    android:text="Already have an account?"
    tools:layout_constraintRight_creator="1"
    tools:layout_constraintBottom_creator="1"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    tools:layout_constraintLeft_creator="1"
    android:layout_marginBottom="70dp"
    app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.303" />


    <TextView
        android:id="@+id/loginpage"
        android:layout_width="127dp"
        android:layout_height="22dp"
        android:text="Log in Here"
        android:textColor="#a798b7"
        android:textStyle="bold"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        android:onClick="tologinpage"
        android:layout_marginBottom="74dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.937" />

    <TextView
        android:id="@+id/temail"
        android:layout_width="226dp"
        android:layout_height="0dp"
        android:textColor="#4a464e"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/pass"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edemail"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/tpass"
        android:layout_width="206dp"
        android:layout_height="22dp"
        android:textColor="#4a464e"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/textlogin"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="104dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="104dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/pass" />


</android.support.constraint.ConstraintLayout>
